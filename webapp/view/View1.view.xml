<mvc:View
    controllerName="com.sap.projectbtp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table">
  
    <Page id="_IDGenPage" title="Customer Details">
        <content>
            <HBox id="_IDGenHBox">
                <Input id="inputCustomerId" placeholder="Enter Customer ID" width="200px" />
                <Button id="_IDGenButton" text="Get Customer" press="onGetCustomerPress" type="Emphasized" />
            </HBox>

            <Table id="customerTable" items="{/customerData}">
                <columns>
                    <Column id="_IDGenColumn1"><Text id="_IDGenText" text="CustomerID" /></Column>
                    <Column id="_IDGenColumn2"><Text id="_IDGenText1" text="Company Name" /></Column>
                    <Column id="_IDGenColumn3"><Text id="_IDGenText2" text="Contact Name" /></Column>
                    <Column id="_IDGenColumn4"><Text id="_IDGenText3" text="Title" /></Column>
                    <Column id="_IDGenColumn5"><Text id="_IDGenText4" text="Address" /></Column>
                    <Column id="_IDGenColumn6"><Text id="_IDGenText5" text="City" /></Column>
                    <Column id="_IDGenColumn7"><Text id="_IDGenText6" text="Region" /></Column>
                    <Column id="_IDGenColumn8"><Text id="_IDGenText7" text="Postal Code" /></Column>
                    <Column id="_IDGenColumn9"><Text id="_IDGenText8" text="Country" /></Column>
                    <Column id="_IDGenColumn10"><Text id="_IDGenText9" text="Phone" /></Column>
                    <Column id="_IDGenColumn11"><Text id="_IDGenText10" text="Fax" /></Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                        <cells>
                            <Text id="_IDGenText11" text="{CustomerID}" />
                            <Text id="_IDGenText12" text="{CompanyName}" />
                            <Text id="_IDGenText13" text="{ContactName}" />
                            <Text id="_IDGenText14" text="{ContactTitle}" />
                            <Text id="_IDGenText15" text="{Address}" />
                            <Text id="_IDGenText16" text="{City}" />
                            <Text id="_IDGenText17" text="{Region}" />
                            <Text id="_IDGenText18" text="{PostalCode}" />
                            <Text id="_IDGenText19" text="{Country}" />
                            <Text id="_IDGenText20" text="{Phone}" />
                            <Text id="_IDGenText21" text="{Fax}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
